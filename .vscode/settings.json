{
  "python.testing.unittestArgs": ["-v", "-s", "./tests", "-p", "test_*.py"],
  "material-icon-theme.folders.customClones": [
    {
      "name": "research",
      "base": "scripts",
      "color": "light-blue-500",
      "lightColor": "light-blue-700",
      "folderNames": ["research"]
    }
  ],
  "material-icon-theme.folders.associations": {
    "sample": "test"
  },
